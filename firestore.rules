rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null;

      match /cart/{cartId} {
        allow read, write: if request.auth != null;
      }
      match /orders/{orderId} {
        allow read, write: if request.auth != null;
      }
    }
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
  }
}